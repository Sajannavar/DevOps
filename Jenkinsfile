pipeline{
    agent any

    stages{
        stage('Build-in Veriables'){
            steps{
                echo "Job Number : ${env.BUILD_NUMBER}"
                echo "Job Name : ${env.JOB_NAME}"
                echo "Build Tag : ${env.BUILD_TAG}"
                echo "Build ID : ${env.BUILD_ID}" 
                echo "Build URL : ${env.BUILD_URL}"
                echo "Node Name : ${env.NODE_NAME}"
                echo "Node Label : ${env.NODE_LABELS}"
                echo "Workspace : ${env.WORKSPACE}"
                echo "Jenkins Home : ${env.JENKINS_HOME}"
                echo "Jenkins URL : ${env.JENKINS_URL}"
                echo "Job URL : ${env.JOB_URL}"
                echo "Executor Number : ${env.EXECUTOR_NUMBER}"
                echo "Java Home : ${env.JAVA_HOME}"
                echo "Maven Home : ${env.MAVEN_HOME}"
                echo "Ant Home : ${env.ANT_HOME}"
                echo "Gradle Home : ${env.GRADLE_HOME}"
                echo "Git Home : ${env.GIT_HOME}"
                echo "Jenkins User : ${env.USER}"
                echo "Jenkins User Home : ${env.HOME}"
                echo "Jenkins User Name : ${env.USERNAME}"
                echo "Jenkins User ID : ${env.USER_ID}"
                echo "Jenkins User Real Name : ${env.REALNAME}"
                echo "Jenkins User Email : ${env.EMAIL}"
                echo "Jenkins User Group : ${env.GROUPS}"
                echo "Jenkins User Shell : ${env.SHELL}"
                echo "Jenkins User Timezone : ${env.TIMEZONE}"
                echo "Jenkins User Locale : ${env.LANG}"
                echo "Jenkins User Language : ${env.LANGUAGE}"
                echo "Jenkins User Country : ${env.COUNTRY}"
                echo "Jenkins User Path : ${env.PATH}"
                echo "Jenkins User Temp : ${env.TEMP}"
                echo "Jenkins User Tmp : ${env.TMP}"
                echo "Jenkins User Classpath : ${env.CLASSPATH}"
                
            }
        }
    }
}